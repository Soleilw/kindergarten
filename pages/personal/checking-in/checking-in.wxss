/* pages/personal/checking-in/checking-in.wxss */
page {
  font-size: 28rpx;
}
.check-box {
  position: relative;
}

.check-box .check-card {
  position: fixed;
  height: 89vw;
  top: 0;
  left: 0;
  right: 0;
  display: flex;
  flex-direction: column;
  align-items: center;
  background-color: #fff;
  margin-bottom: 20rpx;
  z-index: 10;
}

.check-box .check-card .title {
  color: #2a9f93;
  padding: 10rpx;
}

.check-box .check-card .btn {
  margin: 20rpx;
  width: 220rpx;
  height: 220rpx;
  background-color: #2a9f93;
  border-radius: 50%;
  text-align: center;
  color: #fff;
  border: 10rpx solid #b3f3ed;
}

.check-box .check-card .btn view {
  margin-top: 42rpx;
}


.check-box .check-card .tip {
  color: #2a9f93;
  padding: 5rpx;
  border-bottom: 4rpx solid #2a9f93;
}

.check-box .check-rec {
  position: absolute;
  top: 89vw;
  left: 0;
  right: 0;
  padding: 20rpx;
}

.check-box .check-rec .title {
  color: #2a9f93;
}

.check-box .check-rec .item {
  width: 100%;
  padding: 10rpx;
  border-bottom: solid 1rpx #ccc;
  font-size: 28rpx;
}

.check-box .check-rec .item text {
  padding: 0 10rpx;
}

.caledar-box {
  z-index: 10;
  width: 100%;
  height: 100%;
  position: fixed;
  top: 0;
  left: 0;
  margin: auto;
  background-color: rgba(255, 255, 255, .9);
}

.caledar-box .calendar {
  padding: 20rpx;
}

.caledar-box .close {
  text-align: right;
  padding: 40rpx 20rpx;
  color: #2a9f93;
}

.caledar-box .duty {
  color: #fff;
  background-color: #2a9f93;
  text-align: center;
  margin: 22rpx;
  border-radius: 20rpx;
  height: 200rpx;
}

.lh {
  line-height: 200rpx;
}

.lh1 {
  line-height: 60rpx;
}

.caledar-box .duty .on-time text {
  margin: 0 10rpx;
}