.title {
    /* height: 40rpx; */
    margin-bottom: 10rpx;
    padding: 20rpx 200rpx 20rpx 10rpx;
    border-bottom: 1rpx #ccc solid;
    font-size: 30rpx;

}

.title .button {
    /* height: 40rpx;
    line-height: 40rpx; */
    position: absolute;
    top: 10rpx;
    right: 10rpx;
    background-color: #2a9f93;
    color: #fff;
    font-size: 30rpx;
    /* padding: 10rpx; */
}

.editor-title {
    display: block;
    position: relative;
    box-sizing: border-box;
    -webkit-user-select: text;
    user-select: text;
    outline: 0;
    overflow: hidden;
    width: 100%;
    height: 40px;
    min-height: 40px;
}

.container {
    padding: 20rpx 10rpx;
    font-size: 30rpx;

}

.editor-content {
    display: block;
    position: relative;
    box-sizing: border-box;
    -webkit-user-select: text;
    user-select: text;
    outline: 0;
    overflow: hidden;
    width: 100%;
    height: 100%;
}



