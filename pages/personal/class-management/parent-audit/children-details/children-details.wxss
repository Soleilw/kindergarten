/* 提交审核按钮 */
button{
  width:450rpx;
  height:70rpx;
  line-height:70rpx;
  margin:50rpx auto;
  color:#fff;
  background-color:#2a9f93;
  border-radius: 50rpx;
  font-size: 35rpx;
}
button::after{
  border: none;
}
/* 个人信息 */
.container{
  display: flex;
  justify-content: center;
  align-items: center;
  flex-direction: column;
  height: 40vw;
}

.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
  font-size: 30rpx;
}
.userinfo-avatar {
  width: 158rpx;
  height: 158rpx;
  margin: 20rpx;
  border-radius: 50%;
  border:10rpx solid #999;
}

/* 信息列表 */
.list{
  display: flex;
  justify-content: space-between;
  align-items: center;
  font-size: 30rpx;
  color:#666;
}
.list image{
  width:50rpx;
  height:50rpx;
  margin:auto 25rpx;
}
.list view{
  width: 650rpx;
  height:120rpx;
  border-bottom:2rpx solid #ddd;
  display: flex;
  justify-content: space-start;
  align-items: center;
}
.list input{
  width:500rpx;
}
.list text{
 color:#fff;
 width:130rpx;
 height:60rpx;
 line-height:60rpx;
 text-align: center;
 border-radius: 30rpx;
 background-color:#2a9f93;
}
/* 头像 */
.portrait-box{
  padding: 0 50rpx;
  margin-bottom:100rpx;
  display: flex;
  justify-content: space-around;
  align-items: center;
}
.portrait-box view{
  position: relative;
  width: 300rpx;
  height: 225rpx;
  border-radius: 10rpx;
  overflow: hidden;
}
.portrait-box image{
  width: 300rpx;
  height: 225rpx;
}
.portrait-box text{
  position: absolute;
  left:0;
  top:0;
  width: 300rpx;
  height: 225rpx;
  line-height:225rpx;
  text-align: center;
  font-size: 28rpx;
  color:#f8f8f8;
  background-color:rgba(0,0,0,0.4);
}