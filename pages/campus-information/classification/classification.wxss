page{
  /* background-color:#f8f8f8; */
  background-color: #eee;
}
/* 导航分类 */
.classification{
  position: fixed;
  left: 0rpx;
  top:0;
  z-index: 100000;
  background-color:#fff;
  height:100rpx;
  width:100vw;
  margin-bottom:10rpx;
  font-size: 30rpx;
  overflow-x: auto;

  display: flex;
  justify-content:flex-start;
  align-items: stretch;
}
.classification view{
  position: relative;/* formID按钮父元素 */
  line-height:100rpx;
  text-align: center;
  width:187.5rpx;
  min-width: 187.5rpx;
}
.this{
  color:#2a9f93;
  border-bottom:5rpx solid #2a9f93;
}
/* 活动列表 */
.activity-box{
  padding-top:100rpx;
  max-height:100vh; 
  width:100vw;
  display: flex;
  flex-wrap:wrap;
  justify-content: space-between;
}
.activity-list{
  position: relative;/* formID按钮父元素 */
  width:315rpx;
  padding:20rpx 30rpx;
  margin:0 0 10rpx 0;
  background-color:#fff;
  font-size: 28rpx;
  border-radius: 10rpx;
}
.activity-list image{
  width:315rpx;
  height:220rpx;
}
.activity-list .title{
  display: block;
  width:280rpx;
  height:50rpx;
  line-height:50rpx;
  color:#666;
  margin:10rpx 0 50rpx 0;

  display: -webkit-box; 
  -webkit-box-orient: vertical; 
  -webkit-line-clamp: 1; 
  text-overflow: ellipsis; 
  overflow: hidden;
}
 .activity-list .read-num{
  color:#999;
} 
