page{
  padding-top:105rpx;
  background-color:#f8f8f8;
}
/* 导航 */
.class-tab{
  position: fixed;
  left:0;
  top:0;
  z-index: 1000;
  display: flex;
	margin-top: 0rpx;
	justify-content: center;
	background: #ffffff;
	width:100%;
  height:100rpx;
  color:#666;
  font-weight: bold;
}
.class-tab .tab-box{
  position: relative;
  width:375rpx;
  display: flex;
  justify-content: center;
  align-items: flex-start;
}
.class-tab .tab-btu{
  width:49.9%;
  height:95rpx;
  line-height:100rpx;
  text-align:center;
  justify-content: center;
  font-size:32rpx;
}
.text-select{
  color:#2a9f93;
  border-bottom:5rpx solid #2a9f93;
}


/* 信息列表 */
.scrollBox{
  position: fixed;
  left:0;
  top:0;
  z-index: 100;
  width:100vw;
  height:100vh;
}
.record-list{
  position: relative;
  width:690rpx;
  /* height:70rpx; */
  padding:20rpx 30rpx 20rpx 0;
  margin: 0 0 0 30rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  /* background-color:red;  */
  border-bottom:2rpx solid #e9e9e9;
}
.record-list view{
  display: flex;
  justify-content: flex-start;
}
.record-list image{
  width: 40rpx;
  height:40rpx;
  margin: auto 15rpx auto 0; 
}
.record-list text{
  line-height:40rpx;
  font-size: 28rpx;
  color:#999;
}
.record-list .address_text{
  width:430rpx;
  display: flex;
  justify-content: flex-end;
  align-items: center;
}
.record-list .address_text text{
  text-align: right;
}
.col{
  color:#2a9f93 !important;
}
