
/* 个人信息 */
.container{
  height: 48.6vw;
  background-color:#2a9f93; 
  /* margin:0 0 12rpx 0; */
}
.container .userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
}
.container .userinfo image{
  width: 158rpx;
  height: 158rpx;
  margin: 20rpx;
  border-radius: 50%;
  border:8rpx solid #fff;
}
.container .userinfo text {
  color: #FFF;
}


page{
  background-color: #f8f8f8;
  font-size: 30rpx;
  color:#666;
}
.box{
  max-height:100vh;
}

/* 导航分类 */
.classification{
  width:100vw;
  background-color:#fff;
  margin:0 0 20rpx 0;

  display: flex;
  align-items: center;
}
.classification view{
  width:33.33vw;
  height:150rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}
.classification text{
  font-weight: bold;
  width:150rpx;
  height:50rpx;
  line-height:50rpx;
  margin:5rpx 0 0 0;
  font-size: 32rpx;
  text-align: center;
  /* color:#2a9f93; */
  /* background-color:red; */
}

/* 帖子 */
.activity-box{

}
.activity-list{
  width:690rpx;
  padding:30rpx;
  margin:0 0 20rpx 0;
  background-color: #fff;

  display: flex;
  align-items: stretch;
  flex-direction: column;
}
/* 帖子用户信息 */
.activity-list .userInfo{
  display: flex;
  align-items: center;
  justify-content: space-between;
}
.activity-list .userInfo image{
  width:80rpx;
  height:80rpx;
  border-radius: 50%;
}
.activity-list .userInfo .name{
font-size: 30rpx;
width:380rpx;
height:40rpx;
line-height:40rpx;
color:#2a9f93;

display: -webkit-box; 
-webkit-box-orient: vertical; 
-webkit-line-clamp: 1; 
text-overflow: ellipsis; 
overflow: hidden;

}
.activity-list .userInfo .time{
font-size: 25rpx;
width:220rpx;
text-align: right;
}
/* 帖子内容 */
.activity-list .content{
  margin:10rpx 0 0 0;
  line-height:45rpx;
}
.activity-list .abbreviations{/* 内容收起 */
  height: 135rpx;
  display: -webkit-box; 
  -webkit-box-orient: vertical; 
  -webkit-line-clamp: 3; 
  text-overflow: ellipsis; 
  overflow: hidden;
}
.activity-list .open{/* 内容展开 */
  margin:10rpx 0 0 0;
  line-height:45rpx;
}
.activity-list .operation{
  color:#2a9f93;
}
/* 帖子图片 */
.activity-list .image-box{
  margin:10rpx 0 0 0;
  display: flex;
  flex-wrap: wrap;
}
.activity-list .image-box .one{
  max-width:100%;
  max-height:300rpx;
  margin:0 0 10rpx 0;
}
.activity-list .image-box .multiple{
  width:140rpx;
  height:140rpx;
  margin:0 10rpx 10rpx 0;
}
/* 定位 */
.activity-list .address{
  margin:10rpx 0 0 0;
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.activity-list .address image{
  width:40rpx;
  height:40rpx;
}
.activity-list .address text{
  width:630rpx;
  height:40rpx;
  line-height:40rpx;
  
  display: -webkit-box; 
  -webkit-box-orient: vertical; 
  -webkit-line-clamp: 1; 
  text-overflow: ellipsis; 
  overflow: hidden;
}
/* 评论点赞按钮 */
.activity-list .comment-btuBox{
  height:60rpx;
  display: flex;
  justify-content: flex-end;
  align-items: center;
}
.activity-list .comment-btuBox image{
  width:45rpx;
  height:45rpx;
}
.activity-list .comment-btuBox .btuBox{
  width:300rpx;
  height:60rpx;
  line-height:60rpx; 
  margin:0 10rpx 0 0;
  background-color:#333;
  border-radius: 10rpx;
  color:#fff;
  font-size: 30rpx;

  display: flex;
  align-items: stretch;
}
.activity-list .comment-btuBox .btuBox text{
  width:150rpx;
  text-align: center;
}

/* 点赞评论列表 */
.activity-list .comment-box{
  margin:20rpx 0 0 0;
  position:relative;
  background-color:#f8f8f8;

  display: flex;
  align-items: stretch;
  flex-direction: column;
}
.activity-list .comment-box .triangle{/* 冒泡三角 */
  border-width:20rpx; 
  position:absolute; 
  top:-35rpx; 
  left:50rpx;
  border-style:dashed dashed solid dashed; 
  border-color:transparent transparent #f8f8f8 transparent;
  font-size:0; 
  line-height:0;
}
/* 点赞列表 */
.activity-list .comment-box .fabulous-box{
  padding:10rpx 30rpx;

  line-height:38rpx;
  border-bottom:1rpx solid #eee;
  background-color:#f8f8f8;
  font-size: 28rpx;
  color:#2a9f93;
  font-weight: blod;

  display: flex;
  align-items: flex-start;

}
.activity-list .comment-box .fabulous-box image{
  width:35rpx;
  height:35rpx;
  margin: 0 10rpx 0 0;
}
.activity-list .comment-box .fabulous-box .fabulous-list{
  width:100%;

  display: flex;
  align-items: center;
  flex-wrap: wrap;
}

/* 评论列表 */
.activity-list .comment-box .commentList-box {
  padding: 10rpx 30rpx;
  
  display: flex;
  align-items: flex-start;
}

.activity-list .comment-box .commentList-box .icon {
  width:35rpx;
  height:35rpx;
  margin: 0 10rpx 0 0;
}

.activity-list .comment-box .commentList-box .comment-contentBox {
  width:100%;
}

.activity-list .comment-box .commentList-box .comment-list {
  position: relative;
  margin-bottom: 20rpx;
  display: flex;
  justify-content: space-between;
  align-items: flex-start;
}


.activity-list .comment-box .commentList-box .comment-list .comment-info {
  width: 100%;
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
  align-items: stretch;
}

.activity-list .comment-box .commentList-box .comment-list .comment-info view {
  height: 45rpx;
  display: flex;
  justify-content: space-between;
  align-items: flex-start;
}

.activity-list .comment-box .commentList-box .comment-list .comment-info .name {
  font-size: 26rpx;
}

.activity-list .comment-box .commentList-box .comment-list .comment-info .date {
  color: #b0b0b0;
  font-size: 25rpx;
}

/* 评论输入框 */

.chat-input{
  position:fixed;
  left:0;
  bottom:0;
  width:690rpx;
  /* height:100rpx; */
  padding:20rpx 30rpx;
  font-size: 32rpx;
  background-color:#FFF ;
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.chat-input input{
  width: 540rpx;
  height:60rpx;
  background-color:#f8f8f8;
}
.chat-input textarea{
  width: 520rpx;
  min-height:50rpx;
  max-height:180rpx;
  background-color:#f8f8f8;
  padding:5rpx 10rpx;
}
.chat-input button{
  width: 120rpx;
  height:60rpx;
  padding:0;
  margin:0;
  line-height:60rpx;
  color:#fff;
  background-color:#2a9f93;
  font-size: 32rpx;
}